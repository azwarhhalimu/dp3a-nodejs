<div id="content">

    <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Profil</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ubah Profil</li>
            </ol>
        </div>
        <div>
            <div class="card mb-2 col-lg-5" style="margin: auto;">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                </div>
                <div class="card-body">
                    <form action="" method="POST">

                        <div class="form-group">
                            <label for="label">Nama</label>
                            <input type="text" value="<%=data.nama%>" name="nama" required class="form-control"
                                id="exampleInputEmail1" aria-describedby="label">
                        </div>
                        <div class="form-group">
                            <label for="label">Username</label>
                            <input type="text" name="username" value="<%=data.username%>" required class="form-control"
                                id="exampleInputEmail1" aria-describedby="label">
                        </div>
                        <div class="form-group">
                            <label for="label">Passwrod</label>
                            <input type="password" name="password_baru" value="<%=datax%>" class="form-control"
                                id="exampleInputEmail1" aria-describedby="label">
                        </div>
                        <div class="form-group">
                            <label for="label">Passwrod Lama</label>
                            <input type="password" name="password_lama" required class="form-control"
                                id="exampleInputEmail1" aria-describedby="label">
                        </div>
                        <button type="submit" name="update_profil" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
            <div class="card mb-2 col-lg-5" style="margin: auto;">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    Twitter Url
                </div>
                <div class="card-body">
                    <form action="" method="POST">

                        <div class="form-group">
                            <label for="label">URl Twitter</label>
                            <table>
                                <tr>
                                    <td>https://twitter.com/</td>
                                    <td>
                                        <input type="text" value="kpp_pa" name="url" required class="form-control"
                                            id="exampleInputEmail1" aria-describedby="label">
                                    </td>

                                </tr>
                            </table>

                        </div>
                        <button type="submit" name="update_twitter" class="btn btn-primary">Simpan Perubahan</button>
                    </form>
                </div>
                <div class="card-body">

                </div>
            </div>
        </div>
    </div>
</div>