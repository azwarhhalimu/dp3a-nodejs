<div id="content">
    <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-8">
            <h1 class="h3 mb-0 text-gray-800">
                <%=isEdit?"Edit":"Tambah"%> Info
            </h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Home</a></li>
                <li class="breadcrumb-item"><a href="/index.php/admin/info">Info</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    <%=isEdit?"Edit":'Tambah'%> Info
                </li>
            </ol>
        </div>
        <div>
            <a href="/admin/info.html" class="btn btn-primary mb-1">Kembali</a>
            <div class="card mb-2 col-lg-6" style="margin: auto;">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                </div>
                <div class="card-body">
                    <form action="" method="POST">

                        <div class="form-group">
                            <label for="isi">Tanggal</label>
                            <input value="<%=typeof data.tanggal!=='undefined'?data.tanggal:''%>" type="date" required
                                name="tanggal" class="form-control" \ placeholder="Tanggal" />
                        </div>
                        <div class="form-group">
                            <label for="isi">Isi Informasi</label>
                            <textarea name="isi" class="form-control" id="summernote"
                                placeholder="Masukkan isi informasi"><%=typeof data.info!=='undefined' ?data.info:''%></textarea>
                        </div>

                        <button type="submit" name="simpan_informasi" class="btn btn-primary">Simpan</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>