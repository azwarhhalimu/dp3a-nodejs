<div id="content">

    <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Banner</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Banner</a></li>
            </ol>
        </div>
        <div>
            <a href="/admin/tambah-banner.html" class="btn btn-primary mb-1">Tambah Banner</a>
            <div class="card mb-2 col-lg-12" style="margin: auto;">
                <div class="card-body">
                    <table id="table" class="table">
                        <thead>
                            <tr style="font-weight: bold;">
                                <td>No</td>
                                <td>Thumb</td>
                                <td>Keterangan</td>
                                <td>Lokasi</td>
                                <td>Aksi</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% let i=1; for(data of data){%>
                                <tr>
                                    <td>
                                        <%=i%>
                                    </td>
                                    <td>
                                        <img style="border-radius:3px;"
                                            src="/images/banner?target=<%=data.id_banner%>&size=70" />
                                    </td>
                                    <td>
                                        <%=data.keterangan%>
                                    </td>
                                    <td>
                                        <%=data.lokasi%>
                                    </td>
                                    <td style="text-align: right;">
                                        <a href="/admin/tambah-banner.html?id_banner=<%=data.id_banner%>&target=edit"
                                            class="btn btn-outline-primary mb-1">Edit</a>
                                        <a onclick="return confirm('Apakah anda ingin hapus data ini?')"
                                            href="/admin/delete-banner.html?id_banner=<%=data.id_banner%>"
                                            class="btn btn-outline-danger mb-1">Hapus</a>
                                    </td>
                                </tr>

                                <% i++;}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div